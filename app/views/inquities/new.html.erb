<div class="wrapper">
  <div class="inquity-form">
    <h2>お問い合わせフォーム</h2>
      <p id="notice"><%= notice %></p>
        <%= form_with(model: @inquity, local: true) do |f| %>
          <%= f.label :お名前 %><br>
          <%= f.text_field :inquity_name, size: 100 %><br>
          <%= f.label :お問い合わせ内容 %><br>
          <%= f.text_area :message, size: "100*100" %><br>
          <%= f.submit '送信', class:"btn btn-primary btn-inpuity" %>
        <% end %>
  </div>
</div>