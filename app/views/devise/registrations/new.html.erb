
<div class="container">
  <div class="row signin">
    <div class="login-body col-md-5">
      <h2 class="login-title">新規登録</h2>
        <div class="login-error">
          <div id="flash_notice"></div>
          <%= flash[:alert]%>
        </div>

        <i class="far fa-address-card fa-5x"></i>

        <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :お名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 50 %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %>
        </div>

        <div class="field">
          <%= f.label :password %>
            <% if @minimum_password_length %>
              <label><em>(<%= @minimum_password_length %> 文字以上)</em></label>
            <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: 50 %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用）%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 50 %>
        </div>

        <div class="sign-swich">
          <%= render "devise/shared/links" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

