<div class="wrapper">
  <div class="password-content">
  <h4>パスワードを忘れた方</h4>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード変更", class:"btn btn-primary btn-md" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>