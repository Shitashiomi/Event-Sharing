<p id="notice"><%= notice %></p>

<h2>イベントカレンダー</h2>
<div id='container2'>
  <div id="calendar"></div>
</div>


  <h2>最新イベント投稿一覧</h2>
    <% @search_events.each do |event| %>
    <div class="events">
      <h3><%= event.title %></h3>
        <div class="event_content">
          <div class="event_img">
            <%= attachment_image_tag(event, :image, :fill,50, 50, fallback: "no-image.jpg") %>
          </div>

           <div class="event_schedule">
             <ul>
               <li><span>開催場所</span>
                 <%= event.address %></li>

               <li><span>開催場所</span>
                <%= event.start_date %>
                <%= event.end_date %></li>

                <li><span>イベントジャンル</span>
                  <%= event.genre %></li>

                <li><%= link_to "#{event.event_comments.count} コメント", event_path(event.id) %></li>
                <li><%= link_to "#{event.favorites.count} いいね", event_path(event.id) %></li>
                <li><%= link_to '詳細を見る', event %></li>
             </ul>
        </div>
      </div>
    </div>
<% end %>

