<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :イベントタイトル %>
    <%= form.text_field :title, placeholder: "イベントタイトル" %>
  </div>

  <div class="field">
    <%= form.label :開催場所 %>
    <%= form.text_field :address, placeholder: "(例) 奈良公園" %>
  </div>

  <div class="field">
    <%= form.label :ジャンル選択 %>
    <%= form.select :genre,["イベント","お祭り","マルシェ","花火大会","フリーマーケット","フェス"], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= form.label :イベント内容 %>
    <%= form.text_area :description, placeholder: "イベント内容を記載してください" %>
  </div>

  <div class="field">
    <%= form.label :開催日＆時間 %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :終了日＆時間 %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="actions">
    <%= form.submit "登録する", class:"btn btn-primary btn-md" %>
  </div>
<% end %>
