
<h4>プロフィール編集</h4>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.file_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :name %>
	<%= f.text_field :name, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %>
	<%= f.text_field :email, class: "email" %>
  </div>

   <div class="field">
    <%= f.label :introduction %>
	<%= f.text_area :introduction, class: "introduction" %>
  </div>

   <div class="field">
    <%= f.submit "プロフィール編集完了", class: "btn btn-primary text-cenrer" %>
  </div>

<% end %>