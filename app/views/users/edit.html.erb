
<h4>プロフィール編集</h4>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :プロフィール画像 %>
    <%= f.file_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :ユーザー名 %>
	<%= f.text_field :name, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
	<%= f.text_field :email, class: "email" %>
  </div>

   <div class="field">
    <%= f.label :自己紹介 %>
	<%= f.text_area :introduction, class: "introduction" %>
  </div>

   <div class="field">
    <%= f.submit "プロフィール編集完了", class: "btn btn-primary text-cenrer" %>
  </div>

<% end %>