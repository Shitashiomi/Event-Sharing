<div class="wrapper">
  <h4>プロフィール編集</h4>

  <!-- エラーメッセージ表示-->
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <!-- ここまで-->

  <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :プロフィール画像 %>
      <%= f.file_field :profile_image %>
    </div>
    <div class="field">
      <%= f.label :ユーザー名 %>
	    <%= f.text_field :name, class: "name", :size => "40*40" %>
    </div>
    <div class="field">
      <%= f.label :メールアドレス %>
	    <%= f.text_field :email, class: "email", :size => "40*40" %>
    </div>
    <div class="field">
      <%= f.label :自己紹介 %>
	    <%= f.text_area :introduction, class: "introduction", :size => "40*40" %>
    </div>
    <div class="field">
      <%= f.submit "プロフィール編集完了", class: "btn btn-primary text-cenrer" %>
    </div>
  <% end %>
</div>